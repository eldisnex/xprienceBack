<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=search" />
<link rel="stylesheet" href="~/css/filters.css" />
<section class="block create">
    <form action="index.html">
        <h1 class="createTitle">Gastronomy</h1>
        <div class="input-group">
            <label for="submit" class="searchButton">
                Search
                <span class="material-symbols-outlined">
                    search
                </span></label>
            <input type="text" name="query" class="largeInput" placeholder="Insert text..." />
        </div>
        <div class="filters">
            <div class="filter-group">
                <div class="input-group">
                    <span>$</span>
                    <input type="number" name="min" placeholder="Minimum" min="0" aria-label="Minimum price" />
                </div>
                <div class="input-group">
                    <span>$</span>
                    <input type="number" name="max" placeholder="Maximum" min="0" aria-label="Maximum price" />
                </div>
                <div class="input-group">
                    <select aria-label="Select zone" name="zone">
                        <option value="">Zone</option>
                        <option value="zone1">Zone 1</option>
                        <option value="zone2">Zone 2</option>
                        <option value="zone3">Zone 3</option>
                    </select>
                </div>
                <div class="input-group">
                    <select aria-label="Select type of activity" name="activity">
                        <option value="">Type of activity</option>
                        <option value="activity1">Activity 1</option>
                        <option value="activity2">Activity 2</option>
                        <option value="activity3">Activity 3</option>
                    </select>
                </div>
                <div class="input-group">
                    <select aria-label="Select duration" name="duration">
                        <option value="">Duration</option>
                        <option value="1h">1 hour</option>
                        <option value="2h">2 hours</option>
                        <option value="3h">3 hours</option>
                    </select>
                </div>
            </div>
        </div>
        <input type="submit" value="Search" id="submit" hidden />
    </form>
</section>
