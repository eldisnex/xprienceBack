<nav class="sidebar">
    <div class="profile">
        <img src="https://t4.ftcdn.net/jpg/03/49/49/79/360_F_349497933_Ly4im8BDmHLaLzgyKg2f2yZOvJjBtlw5.webp"
            alt="Avatar">
        <h3 style="text-transform: capitalize;">@ViewBag.user.username</h3>
    </div>
    <ul class="menu">
        <li><a href='@Url.Action("ConfigurationProfile")'>Profile</a></li>
        <li><a href='@Url.Action("ConfigurationConfiguration")'>Configuration</a></li>
